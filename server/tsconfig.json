{
    "compilerOptions": {
        // Basic Options
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "rootDir": "./src",
        // Strictness
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        // Compaitbility & Debugging
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    // Exclude test file and node_modules
    "exclude": ["node_modules"]
}